@model ProjectOne.WebSite.Models.EnrollClassModel[]
@{
    ViewData["Title"] = "Enroll In Class";
}

@if (Model == null)
{
    <h4>Loading...</h4>
}
@if (Model.Length > 0)
{
    <div class="text-left">
        <h4>@ViewData["Title"]</h4>
        <div class="col-md-4 padding-left-none">
            <p>Select a Class to enroll in.</p>
            <form method="post" asp-action="EnrollClass">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" name="className" />
                    <select id="className" name="classId">
                        @foreach (var c in Model)
                        {
                            var classId = c.ClassId;
                            var className = c.ClassName;
                            <option value="@classId">@className</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add a Class" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <h4>No @ViewData["Title"] found.</h4>
}