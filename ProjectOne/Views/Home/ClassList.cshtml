@model IEnumerable<ProjectOne.Db.Class>
@{
    ViewData["Title"] = "Classes";
}

<div class="text-left">
    <h4>@ViewData["Title"]</h4>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        @foreach (var c in Model)
        {
            var className = c.ClassName;
            var classDescription = c.ClassDescription;
            var classPrice = c.ClassPrice.ToString("C");
            <tbody>
                <tr>
                    <td>@className</td>
                    <td>@classDescription</td>
                    <td>@classPrice</td>
                </tr>
            </tbody>
        }
    </table>
</div>


