@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <h1 class="display-4">Welcome To The Learning Center</h1>
    <p>The place for technology classes.</p>
    <button type="button" class="btn btn-primary">Learn more</button>
    <div class="row margin-top">
        <div class="col-md-4">
            <h4><a asp-area="" asp-controller="Home" asp-action="ClassList">Class List</a></h4>
            <p>See all our class offerings.</p>
        </div>
        <div class="col-md-4">
            <h4><a asp-area="" asp-controller="Home" asp-action="StudentClasses">Your enrolled classes</a></h4>
            <p>See the classes you are enrolled in.</p>
        </div>
        <div class="col-md-4">
            <h4><a asp-area="" asp-controller="Home" asp-action="EnrollInClass">Enroll in a class</a></h4>
            <p>Take a new class.</p>
        </div>
    </div>
</div>

